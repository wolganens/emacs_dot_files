\begin{frame}[label={sec:orgd4d0d75}]{Hogan: Um modelo de desenvolvimento}
\begin{description}
\item[{HDS (Dark Side Of Personality)}] Abordagems sob stress.
\item[{HPI (The Bright Side Of Personality)}] Abordagems típica.
\item[{MVPI (The Inside Of Personality)}] Valores mais motivadores.
\end{description}
\end{frame}

\begin{frame}[label={sec:orgce920a2}]{Exemplo}
\ldots{}
\end{frame}

\begin{frame}[label={sec:orgd7a2c6a},fragile]{Mindsight: Um modelo de recrutamento}
 \begin{description}
\item[{Mental}] Teste de raciocínio fluido Baseado na estrutura C-H-C (Cattel-Horn-Carrol)\footnote{(O grau de adaptabilidade é de cima para baixo)}
\item[{Social}] Testes de habilidades interpessoais usando \texttt{Situational Judgement
  Test}. Explicam variância na performance diferente da habilidade cognitiva.
\item[{Motivacional}] Mede mecanismos de justificativa usando um \texttt{Conditional
  Reasoning Test}.
\end{description}
\end{frame}

